{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": "app"
  },
  "angularCompilerOptions": {
    "genDir": "./app/locale"
  },
  "exclude": [
    "node_modules",
    "aot",
    "app/main.ts"
  ]
}
